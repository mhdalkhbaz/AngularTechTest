
@{
    ViewBag.Title = "Employees-AngularTechTest";
}

<h2>AngularTechTest</h2>

<div class="container">
    <div class="row">


        <br />
        <div ng-controller="myCtrl">

            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col" class="text-center"> ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Department</th>
                        <th scope="col">Salary</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-click="editRecord( item.Id  )"
                        ng-init=" $parent.total = total  + item.Salary"
                        data-toggle="modal" data-target="#myModal"
                        dir-paginate="item in items | filter:q | itemsPerPage: pageSize" current-page="currentPage" pagination-id="mealsPagination">
                        
                        <th scope="row" class="text-center">{{ item.Id }}  </th>
                        <td> {{ item.Name }}    </td>
                        <td> {{ item.Department }}    </td>
                        <td> {{ item.Salary }}    </td>



                    </tr>
                  
                    <tr>
                        <th colspan="2"></th>
                        <th class="text-success  bg-info"> SUM Salary</th>
                        <td class="text-success  bg-info">{{ total}}</td>

                    </tr>

                </tbody>
            </table>

            <div class="text-center">
                <dir-pagination-controls boundary-links="true" pagination-id="mealsPagination" on-page-change="pageChangeHandler(newPageNumber)" template-url="~/Content/dirPagination-tpl.html"></dir-pagination-controls>
            </div>


            <div class="container text-center">
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <div class="modal-content">
                            <div class="modal-header bg-success">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title ">  Employee Name  :   {{  Employee.Name}}</h4>
                            </div>
                            <div class="modal-body">
                                <p>  Department :  {{ Employee.Department }}</p>
                                <p>    Salary   :  <input type="number" ng-model=" Employee.Salary"></p>

                            </div>
                            <div class="  modal-footer  " style="text-align: center;">
                                <button class="btn btn-primary" ng-click="updateRecord( Employee.Salary , Employee.Id)"> Update Salary </button>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>





    </div>


</div>